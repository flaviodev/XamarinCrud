<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudAula.view.ListaContato" Title="Contatos">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="Lista"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" ItemSelected="Lista_ItemSelected"/>

            <Button Text="+ Novo Contato" Clicked="Button_Clicked" HorizontalOptions="Center" VerticalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>