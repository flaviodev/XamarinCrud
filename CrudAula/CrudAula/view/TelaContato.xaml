<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudAula.view.TelaContato">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Nome" Placeholder="Digite o nome"/>
            <Entry x:Name="Email" Placeholder="Digite o e-mail"/>
            <Entry x:Name="Telefone" Placeholder="Digite o telefone" />
            <Button x:Name="Salvar" Text="Salvar" Clicked="SalvarClicked" />

            <ListView x:Name="Lista"></ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>