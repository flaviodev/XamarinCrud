<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudAula.view.ConsultaContato" Title="Dados do Contato">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Nome: "/>
            <Entry x:Name="Nome" IsEnabled="False"/>
            
            <Label Text="e-mail: "/>
            <Entry x:Name="Email"  IsEnabled="False"/>
            
            <Label Text="Telefone: "/>
            <Entry x:Name="Telefone"  IsEnabled="False" />

            <Button x:Name="Edita" Text="Editar" Clicked="EditarClicked" />
            <Button x:Name="Exclui" Text="Excluir" Clicked="ExcluirClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>